{
    "manifest_version": 3,
    "name": "AI Tab Classifier",
    "version": "1.0.0",
    "description": "使用AI自动分类和分组浏览器标签页",
    "permissions": [
        "tabs",
        "tabGroups",
        "storage",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}